{
	"name": "@ank1015/mini-coding-agent",
	"version": "0.0.14",
	"description": "MINI coding agent",
	"type": "module",
	"miniConfig": {
		"name": "mini",
		"configDir": ".mini"
	},
	"bin": {
		"mini": "dist/cli.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "npm run copy-assets && tsc --watch",
		"dev:start": "npm run build && node dist/cli.js",
		"start": "node dist/cli.js",
		"clean": "rm -rf dist",
		"build": "npm run clean && npm run copy-assets && tsc",
		"copy-assets": "mkdir -p dist/modes/theme && cp src/modes/theme/*.json dist/modes/theme/",
		"test": "vitest --run",
		"prepublishOnly": "npm run build"
	},
	"dependencies": {
		"@ank1015/agents-tui": "^0.0.21",
		"@ank1015/providers": "^0.0.34",
		"@sinclair/typebox": "^0.34.41",
		"chalk": "^5.5.0",
		"cli-highlight": "^2.1.11",
		"diff": "^8.0.2",
		"file-type": "^21.1.1",
		"glob": "^11.0.3",
		"jiti": "^2.6.1",
		"strip-ansi": "^7.1.2",
		"toml": "^3.0.0"
	},
	"devDependencies": {
		"@types/diff": "^7.0.2",
		"@types/node": "^24.3.0",
		"tsx": "^4.21.0",
		"typescript": "^5.7.3",
		"vitest": "^3.2.4"
	},
	"keywords": [
		"coding-agent",
		"mini",
		"minimal",
		"ai",
		"llm",
		"cli",
		"tui",
		"agent"
	],
	"author": "ank1015",
	"license": "MIT",
	"engines": {
		"node": ">=20.0.0"
	}
}
